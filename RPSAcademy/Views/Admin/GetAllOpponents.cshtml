@model RPSAcademy.Models.DTOs.AdminDisplayModel

<h1 style="text-align:center;">Edit Opponents</h1>
<hr style="margin-bottom:40px" />

<div class="row">
    @foreach (var opponent in Model.Opponents)
    {
        <div class="col-md-4 text-center" style="padding-bottom: 70px;">
            <h2>@opponent.Name</h2>
            <p>@opponent.Info</p>
            <div class="mt-3">
                <img src="/Images/Opponents/@opponent.ImageUrl"
                     style="border: 3px solid black;
                            border-radius: 50%;
                            height: 200px;
                            width: 200px;
                            margin-bottom: 5px;" />
            </div>
            <div class="mt-2">
                <button type="button" onclick="getOpponent(@opponent.id)"
                        style="text-align: center;
                               margin-bottom: 10px;
                               height: 30px;
                               background-color: black;
                               width: 200px;
                               color: white;
                               position: center;
                               font-weight: 500;">
                    Edit
                </button>
            </div>
        </div>
    }
</div>

<script>
    function getOpponent(opponentId) {
        window.location.href = "/Admin/GetOpponent?opponentId=" + opponentId;
    }
</script>





