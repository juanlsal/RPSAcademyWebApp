@model RPSAcademy.Models.DTOs.SelectOpponentDisplayModel

@if (User.IsInRole("User"))
{
    @if(Model.UserInfo is null)
    {
        <h1 style="text-align:center;">Welcome back, user, are you ready to play and learn? </h1>

    }
    else
    {
        @if (Model.UserInfo.PreferredName is not null & Model.UserInfo.ProfileImageUrl is null)
        {
            <h1 style="text-align:center;">Welcome back, @Model.UserInfo.PreferredName, are you ready to play and learn? </h1>

        }
        @if (Model.UserInfo.PreferredName is not null & Model.UserInfo.ProfileImageUrl is not null)
        {
            <div class="split-container">

                <div class="left-section" style="width:10%">
                    <img src="/Uploads/@Model.UserInfo.ProfileImageUrl" style="
                         border: 3px solid black;
                         border-radius: 50%;
                         height: 100px;
                         width: 100px;
                         object-fit:cover;">
                </div>

                <div class="right-section" style="padding-top:30px; width:90%;">
                    <h1 style="text-align:center;">Welcome back, @Model.UserInfo.PreferredName, are you ready to play and learn? </h1>
                </div>

            </div>
        }
        @if (Model.UserInfo.PreferredName is null)
        {
            <h1 style="text-align:center;">Welcome back, user, are you ready to play and learn? </h1>
        }
    }
}
else
{
    <h1 style="text-align:center;">Welcome back are you ready to play and learn? </h1>
}
<h2 style="text-align:center; margin-bottom: 40px; margin-top:20px; ">Choose your opponent. Each opponent has a unique chance of answering the question correctly, so choose wisely...</h2>
@if (User.IsInRole("User"))
{
    @if (Model.UserInfo is null)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="btn-close" data-bs-dismiss="alert"  fdprocessedid="b1xm7"></button>
            <strong>Enhance your experience by personalizing your profile. Add your preferred name and a profile picture to make it uniquely yours. <a href="/Profile/CustomizeProfile" class="alert-link">Customize your profile now!</a></strong>
        </div>
    }
}

<hr style="margin-bottom:40px"/>
<div class="row">
    @foreach (var opponent in Model.Opponents)
    {
        <div class="col-md-4 text-center" style="padding-bottom:70px;">
            <h2>@opponent.Name</h2>
            <h7>@opponent.Info</h7>
            <div class="mt-3">
                <img src="/Images/Opponents/@opponent.ImageUrl"
                     style="
            border: 3px solid black;
            border-radius: 50%;
            height: 200px;
            width: 200px;
            margin-bottom: 5px;" />
            </div>
            <div class="mt-2">
                <button href="#"
                        style="
                    text-align: center;
                    margin-bottom: 10px;
                    height: 30px;
                    background-color: black;
                    width: 200px;
                    color: white;
                    position: center;
                    font-weight: 500;">
                        Select @opponent.Name
                </button>
            </div>
        </div>
    }
</div>